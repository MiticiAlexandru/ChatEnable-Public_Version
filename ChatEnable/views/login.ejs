<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/stylesheets/theme.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
	<title>Chat Login Page</title>
	<meta charset="UTF-8">
</head>
<body onload="initialize()" onresize="resizeAction()">
    <!--
        CLIENT JS SCRIPT:
    -->
    <script src="/javascripts/client_login.js"></script>
    <script src="/javascripts/client_common.js"></script>

    <div id="backgroundContainer">
        <!--
            LOGIN WINDOW CODE:
        -->
        <div id="loginContainer">
            <form action="/auth" method="POST" onsubmit="return validateFormLogin()">
            <div class="upper_container">
                <p>Welcome!<br></p>
                <div>
                    <label for="username">Username:</label>
                    <input id="usernameField" type="text" name="username" class="fields"><br>
                </div>
                <p></p>
                <div>
                    <label for="password">Password or token:</label>
                    <input id="passwordField" type="password" name="password" class="fields">
                </div>
            </div>

            <div class="logo_container">
                <img src="/images/logo.png" class="icon2">
            </div>

            <div class="lower_container">
                <span>
                <p>
                    <button type="submit" class="buttonLightBlue" id="loginButton">Login</button>
                    &nbsp;&nbsp;&nbsp;
                    <button type="button" class="buttonLightBlue" id="openSignUpWindowButton" onclick="switchLoginSignUp()">Sign up</button><br><br>
                    <button type="button" class="buttonLightBlue" id="switchButton" onclick="switchLoginForgotPass()">Forgot your password</button><br>
                </p>
                </span>
            </div>
            </form>
        </div>
        <!--
            SIGN UP WINDOW CODE:
        -->
        <div id="signUpContainer">
            <form action="/register" method="POST" onsubmit="return validateFormRegister()">
            <p>Sign up<br></p>
            <div>
                <label for="firstName">First name:</label><br>
                <input id="firstNameField" type="text" name="firstName" class="fields"><br>
            </div>
            <p></p>
            <div>
                <label for="lastName">Last name:</label><br>
                <input id="lastNameField" type="text" name="lastName" class="fields"><br>
            </div>
            <p></p>
            <div>
                <label for="usernameSignUp">Username:</label><br>
                <input id="signUpUsernameField" type="text" name="usernameSignUp" class="fields"><br>
            </div>
            <p></p>
            <div>
                <label for="email">Email:</label><br>
                <input id="emailField" type="text" name="email" class="fields"><br>
            </div>
            <p></p>
            <div>
                <label for="passwordSignUp">Password:</label><br>
                <input id="signUpPasswordField" type="password" name="passwordSignUp" class="fields">
            </div>
            <p></p>
            <div>
                <label for="passwordConfirm">Re-enter password:</label><br>
                <input id="signUpPasswordConfirmField" type="password" name="passwordConfirm" class="fields">
            </div>
            <p>
                <button type="button" class="buttonLightBlue" id="cancelButton" onclick="switchLoginSignUp()">Cancel</button>
                &nbsp;&nbsp;&nbsp;
                <button type="submit" class="buttonLightBlue" id="signUpButton">Sign up</button><br>
            </p>
            </form>
        </div>
        <!--
            FORGOT PASSWORD WINDOW CODE:
        -->
        <div id="forgotPasswordContainer">
            <form action="/forgot-pass" method="POST" onsubmit="return validateFormForgotPass()">
            <div class="upper_container">
                <p>Input email address to access your account<br></p>
                <div>
                    <label for="usernameRecovery">Username:</label>
                    <input id="usernameRecovery" type="text" name="usernameRecovery" class="fields"><br>
                </div>
                <p></p>
                <div>
                    <label for="recoveryEmail">Email:</label>
                    <input id="recoveryEmailField" type="text" name="recoveryEmail" class="fields"><br>
                </div>
            </div>

            <div class="logo_container">
                <img src="/images/logo.png" class="icon2">
            </div>

            <div class="lower_container">
                <span>
                <p>
                    <button type="button" class="buttonLightBlue" id="cancelButton" onclick="switchLoginForgotPass()">Cancel</button>
                    &nbsp;&nbsp;&nbsp;
                    <button type="submit" class="buttonLightBlue" id="resetPasswordButton">Get one-time token</button><br>
                </p>
                </span>
            </div>
            </form>
        </div>
    </div>
</body>
</html>
